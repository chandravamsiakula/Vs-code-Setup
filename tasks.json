{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run Java (log output or error)",
            "type": "shell",
            "command": "javac Main.java 2>&1 | Out-File output.txt; if ($?) { Get-Content input.txt | java Main 2>&1 | Out-File -Append output.txt }",
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                }
            },
            "presentation": {
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}

